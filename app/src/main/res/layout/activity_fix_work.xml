<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.isoftston.issuser.conchapp.weight.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav" />
    <RelativeLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="@string/start_work_time"/>
        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="2017-5-12     07:50"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c6c1c1"></View>
    <RelativeLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="@string/end_work_time"/>
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="2017-5-12     07:50"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c6c1c1"></View>
    <RelativeLayout
        android:id="@+id/rl_guardian"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="14sp"
            android:text="@string/keeper"/>
        <TextView
            android:id="@+id/tv_guardian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="@string/someone"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c6c1c1"></View>
    <RelativeLayout
        android:id="@+id/rl_auditor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="14sp"
            android:text="@string/checker"/>
        <TextView
            android:id="@+id/tv_auditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="@string/someone"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c6c1c1"></View>
    <RelativeLayout
        android:id="@+id/rl_approver"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_approver"
            android:layout_alignBottom="@+id/tv_approver"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:text="@string/authorize"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:padding="10dp"
            android:text="@string/someone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="14sp"
            android:id="@+id/tv_approver" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c6c1c1"></View>
    <!--<com.isoftston.issuser.conchapp.weight.InputView-->
        <!--android:id="@+id/worker_fix_input"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/ll_hidden_trouble_bg"/>-->
    <RelativeLayout
        android:id="@+id/rl_num"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="@dimen/dp_10"
            android:layout_centerInParent="true"
            android:text="@string/work_number"
            android:textColor="#000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_pink2"
            android:hint="@string/work_number"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_margin="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:inputType="number"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c6c1c1"></View>
    <Button
        android:id="@+id/bt_sure"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/sure"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/shape_corner_green"/>
</LinearLayout>